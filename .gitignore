# ignore everything in the root except the "src" directory.
/*
!src/

# ignore everything in the public except the "content" directory.
public/*
!public/content/

# ignore everything in the "content" directory, except:
# mu-plugins, plugins, and themes directories
public/content/*
!public/content/mu-plugins/
!public/content/plugins/
!public/content/themes/

public/content/mu-plugins/*
public/content/plugins/*
public/content/themes/*

# ignore all files starting with . or ~
.*
~*

# ignore node dependency directories
vendor/
node_modules/

# PhpStorm files.
/.idea/

# DS_Store files generated by Finder on MacOS.
**/.DS_Store

# ignore OS generated files
ehthumbs.db
Thumbs.db
.rnd

# ignore log files and databases
*.log
*.sql
*.sqlite

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# ignore environment files
.env

# -------------------------
# BEGIN Whitelisted Files
# -------------------------

# track these files, if they exist
!.gitignore
!.gitmodules
!.editorconfig
!.phpcs.xml.dist
!README.md
!CHANGELOG.md
!composer.json
!package.json
!vite.config.js

# track favicon files, if they exist
!android-chrome-*.png
!apple-touch-icon*.png
!browserconfig.xml
!favicon*.png
!favicon*.ico
!manifest.json
!mstile-*.png
!safari-pinned-tab.svg
!site.webmanifest

